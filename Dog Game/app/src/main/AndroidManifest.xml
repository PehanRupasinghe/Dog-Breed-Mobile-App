<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doggame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SearchBreedsActivity"
            android:label="Search Dog Breeds"
            android:parentActivityName=".MainActivity" ></activity>
        <activity android:name=".IdentifyDogActivity"
            android:label="Identify the Dog"
            android:parentActivityName=".MainActivity" ></activity>
        <activity android:name=".IdentifyBreedActivity"
            android:label="Identify the Breed"
            android:parentActivityName=".MainActivity" ></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>